program Project2;

uses
  System.SysUtils;

var
  f: TextFile;
  c: Char;
  s: String;
  sumStr: String = '';
  arrString: array of string;
  N: integer = 10;
  curLength: integer = 0;

begin
  sumStr := '';
  AssignFile(f, '..\..\myText.txt');
  Reset(f);
  while not Eof(f) do
  begin
    readln(f, s);
    sumStr := sumStr + s;
  end;
  CloseFile(f);
  write('   ');
  for c in sumStr do
    if (c <> '$') and (curLength < N) then
    begin
      write(c);
      curLength := curLength + 1;
    end
    else if c = '$' then
    begin
      write(#10, '   ');
      curLength := 0;
    end
    else
    begin
      write(#10, ' ', c);
      curLength := 0;
    end;

  readln;

end.
